        <div>
         <% cart.forEach(product => { %>
            <section class="product-info">
               <div><img src="<%= product.photos[0] %>" /></div>
               <div>
                  <h1><%= product.title %></h1>
                  <p class="price">&dollar;<%= product.price %></p>
                  <div class="review-count">
                     <div>
                        <ion-icon class="star" name="star"></ion-icon>
                        <ion-icon class="star" name="star"></ion-icon>
                        <ion-icon class="star" name="star"></ion-icon>
                        <ion-icon class="star" name="star"></ion-icon>
