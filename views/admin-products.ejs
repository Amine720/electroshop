<%- include ('partials/admin-nav', {csrfToken}) %> 
<% if (messages.success) { %>
	<div style="background-color: #2f83fa; color: white; padding: 20px; text-align: center; font-size: 20px;">
		<p><%= messages.success %></p>
	</div>
<% } %>
		<div class="admin-products">
			<div class="wrapper">
				<div class="links">
					<a href="/admin/products/add" class="products">Add Product</a>
				</div>
				<table>
					<tr>
						<th>Image</th>
						<th>Title</th>
						<th>Category</th>
						<th>Price</th>
						<th>Quantity</th>
						<th>Featured</th>
						<th>New</th>
						<th></th>
						<th></th>
					</tr>
					<% products.forEach(product => { %>
					<tr>
						<td>
							<img src="<%= product.photos[0] %>" width="100px" />
						</td>
						<td><%= product.title %></td>
						<td><%= product.category %></td>
						<td><%= product.price %></td>
						<td><%= product.quantity %></td>
						<td><%= product.featured %></td>
						<td><%= product.new %></td>
						<td><a href="/admin/products/update/<%= product._id  %> " class="update">Update</a></td>
						<td>

							<form class="delform" method="POST" action="/admin/products/remove/<%= product._id  %> ">
								<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
								<button type="submit" class="remove" onclick="return confirm('Are you sure you want to remove this product ?')">Remove</button>
							</form>
						</td>
					</tr>
					<% }) %>
				</table>
			</div>
		</div>
	</body>
</html>
